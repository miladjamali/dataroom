{
  "name": "@dataroom/constants",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared constants for the dataroom monorepo",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./files": {
      "types": "./dist/files.d.ts",
      "import": "./dist/files.js"
    },
    "./api": {
      "types": "./dist/api.d.ts", 
      "import": "./dist/api.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "import": "./dist/validation.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^22.12.4",
    "typescript": "^5.7.2"
  }
}