{
  "name": "@dataroom/auth",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared authentication utilities for the dataroom monorepo",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./jwt": {
      "types": "./dist/jwt.d.ts",
      "import": "./dist/jwt.js"
    },
    "./password": {
      "types": "./dist/password.d.ts",
      "import": "./dist/password.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^3.0.2",
    "@dataroom/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.12.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/bcryptjs": "^3.0.0",
    "typescript": "^5.7.2"
  }
}
