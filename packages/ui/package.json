{
  "name": "@dataroom/ui",
  "version": "0.1.0",
  "description": "Shared UI components for the dataroom monorepo",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./button": {
      "types": "./dist/button.d.ts",
      "import": "./dist/button.js"
    },
    "./input": {
      "types": "./dist/input.d.ts",
      "import": "./dist/input.js"
    },
    "./card": {
      "types": "./dist/card.d.ts",
      "import": "./dist/card.js"
    },
    "./dialog": {
      "types": "./dist/components/ui/dialog.d.ts",
      "import": "./dist/components/ui/dialog.js"
    },
    "./dropdown-menu": {
      "types": "./dist/components/ui/dropdown-menu.d.ts",
      "import": "./dist/components/ui/dropdown-menu.js"
    },
    "./separator": {
      "types": "./dist/components/ui/separator.d.ts",
      "import": "./dist/components/ui/separator.js"
    },
    "./badge": {
      "types": "./dist/components/ui/badge.d.ts",
      "import": "./dist/components/ui/badge.js"
    },
    "./tooltip": {
      "types": "./dist/components/ui/tooltip.d.ts",
      "import": "./dist/components/ui/tooltip.js"
    },
    "./modal": {
      "types": "./dist/modal.d.ts",
      "import": "./dist/modal.js"
    },
    "./spinner": {
      "types": "./dist/spinner.d.ts",
      "import": "./dist/spinner.js"
    },
    "./toast": {
      "types": "./dist/toast.d.ts",
      "import": "./dist/toast.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "tailwind-merge": "^3.3.1"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "typescript": "^5.6.0"
  }
}